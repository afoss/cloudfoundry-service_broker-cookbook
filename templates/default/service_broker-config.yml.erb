---
cloud_controller_uri: <%= node['cloudfoundry_cloud_controller']['server']['api_uri'] %>
external_uri: <%= node['cloudfoundry_service_broker']['host'] %>.<%= node['cloudfoundry_cloud_controller']['server']['domain'] %>

index: <%= node['cloudfoundry_service_broker']['index'] %>
token: <%= node['cloudfoundry_common']['service_token'] %>
logging:
  level: <%= node['cloudfoundry_service_broker']['log_level'] %>
  file: <%= node['cloudfoundry_service_broker']['log_file'] %>

mbus: nats://<%= node['nats_server']['user'] %>:<%= node['nats_server']['password'] %>@<%= node['cloudfoundry_common']['nats_server']['host'] %>:<%= node['cloudfoundry_common']['nats_server']['port'] %>/
pid: <%= node['cloudfoundry_service_broker']['pid_file'] %>
local_db: sqlite3:<%= node['cloudfoundry_service_broker']['base_dir'] %>/service_broker.db
